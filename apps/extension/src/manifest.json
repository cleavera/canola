{
    "manifest_version": 2,
    "name": "Antisback's bushtarion toolkit",
    "version": "1.0",
    "description": "Adds features and extensions for the bushtarion web game",

    "background": {
        "scripts": [
            "background-script.js"
        ]
    },

    "permissions": [
        "*://*.bushtarion.com/*"
    ],

    "content_scripts": [
        {
            "matches": [
                "*://*.bushtarion.com/*"
            ],
            "js": [
                "./content-script.js"
            ]
        }
    ]
}
